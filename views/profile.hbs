
{{> navbar}}

<form action="/create" method="post" enctype="multipart/form-data">

    <legend class="uk-legend">Share your thoughts!</legend>
    <div class="uk-margin">
        <div class="uk-form-width-large">
            <textarea name="post" class="uk-textarea" id="comment-text" type="text" rows="5" placeholder="Write your post here..."></textarea>
        </div>
    </div>

    <div class="uk-margin">
        <label class="uk-form-label" for="images">Images</label>
        <div class="uk-form-width-large">
            <input class="uk-input" type="file" name="images" multiple />
        </div>
    </div>

    <div class="uk-margin">
        <label class="uk-form-label" for="hashtags">Hashtags</label>
        <div class="uk-form-width-large">
            <input class="uk-input" type="text" name="hashtags" placeholder="#BTC #Binance..."/>
        </div>
    </div>


    <button class="uk-button uk-button-default" type="submit">Publish Post!</button>

</form>